{
  "name": "gas-link-worker",
  "version": "1.0.0",
  "description": "Cloudflare Worker for GAS Link URL shortener",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create gas-link-db",
    "db:migrate": "wrangler d1 execute gas-link-db --file=../database/schema.sql",
    "db:migrate:local": "wrangler d1 execute gas-link-db --local --file=../database/schema.sql"
  },
  "dependencies": {
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "typescript": "^5.3.3",
    "wrangler": "^4.53.0"
  }
}
